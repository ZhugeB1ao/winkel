@model List<WebApplication1.Models.CartItem>

<div class="text-center">
      <div class="hero-wrap hero-bread" style="background-image: url('@Url.Content("~/assets/images/bg_6.jpg")');">
      <div class="container">
        <div class="row no-gutters slider-text align-items-center justify-content-center">
          <div class="col-md-9 ftco-animate text-center">
          	<p class="breadcrumbs"><span class="mr-2"><a href="index.html">Home</a></span> <span>Cart</span></p>
            <h1 class="mb-0 bread">My Cart</h1>
          </div>
        </div>
      </div>
    </div>

    <section class="ftco-section ftco-cart">
			<div class="container">
				<div class="row">
    			<div class="col-md-12 ftco-animate">
    			@if (Model == null || Model.Count == 0)
    			{
    				<!-- Empty Cart Message -->
    				<div class="cart-list">
    					<div class="text-center py-5">
    						<i class="icon-shopping_cart" style="font-size: 64px; color: #ccc;"></i>
    						<h3 class="mt-3">Your cart is empty</h3>
    						<p class="text-muted">Add some products to your cart to see them here.</p>
    						<a href="/Shop" class="btn btn-primary mt-3">Continue Shopping</a>
    					</div>
    				</div>
    			}
    			else
    			{
    				<!-- Cart Table -->
    				<div class="cart-list">
	    				<table class="table">
						    <thead class="thead-primary">
						      <tr class="text-center">
						        <th>&nbsp;</th>
						        <th>&nbsp;</th>
						        <th>Product</th>
						        <th>Price</th>
						        <th>Quantity</th>
						        <th>Total</th>
						      </tr>
						    </thead>
						    <tbody>
								@foreach (var item in Model)
								{
									<tr class="text-center cart-item-row" data-product-id="@item.Product.Id">
										<td class="product-remove"><a href="#" data-product-id="@item.Product.Id"><span class="ion-ios-close"></span></a></td>

										<td class="image-prod">
											<div class="img" style="background-image:url('@Url.Content(@item.Product.Picture)');"></div></td>

										<td class="product-name">
											<h3>@item.Product.Name</h3>
											<p>@item.Product.Description</p>
										</td>

										<td class="price">$@((item.Product.Price ?? 0).ToString("F2"))</td>

										<td class="quantity">
											<div class="input-group mb-3">
												<input type="text" name="quantity" class="quantity form-control input-number" value="@item.Quantity" min="1" max="100">
											</div>
										</td>

										<td class="total">$@(((item.Product.Price ?? 0) * item.Quantity).ToString("F2"))</td>
									</tr><!-- END TR-->
								}
						    </tbody>
						  </table>
					  </div>
			}
    			</div>
    		</div>
    	@if (Model != null && Model.Count > 0) 
		{
    		<div class="row justify-content-center">
    			<div class="col col-lg-5 col-md-6 mt-5 cart-wrap ftco-animate">
    				<div class="cart-total mb-3">
    					<h3>Cart Totals</h3>
    					<p class="d-flex">
    						<span>Subtotal</span>
    						<span id="cart-subtotal">$@ViewBag.SubTotal.ToString("F2")</span>
    					</p>
    					<p class="d-flex">
    						<span>Delivery</span>
    						<span id="cart-delivery">$@ViewBag.Delivery.ToString("F2")</span>
    					</p>
    					<p class="d-flex">
    						<span>Discount</span>
    						<span id="cart-discount">$@ViewBag.Discount.ToString("F2")</span>
    					</p>
    					<hr>
    					<p class="d-flex total-price">
    						<span>Total</span>
    						<span id="cart-total">$@ViewBag.Total.ToString("F2")</span>
    					</p>
    				</div>
    				<p class="text-center"><a asp-controller="Checkout" asp-action="Index" class="btn btn-primary py-3 px-4">Proceed to Checkout</a></p>
    			</div>
    		</div>
    	}
			</div>
		</section>
</div>