@model WebApplication1.Models.Product

<div class="col-sm-6 col-md-6 col-lg-4 ftco-animate">
    <div class="product">
        <a href="/Product/Detail/@Model.Id" class="img-prod">
            <img class="img-fluid" src="@Model.Picture" alt="@Model.Name">
            <div class="overlay"></div>
        </a>
        <div class="text py-3 px-3">
            <h3><a href="#">@Model.Name</a></h3>
            <div class="d-flex">
                <div class="pricing">
                    <p class="price"><span class="price">$@Model.Price</span></p>
                </div>
                <div class="rating">
                    <p class="text-right">
                        @for (int i = 0; i < 5; i++)
                        {
                            <a href="#"><span class="ion-ios-star-outline"></span></a>
                        }
                    </p>
                </div>
            </div>
            <p class="bottom-area d-flex px-3">
                <a href="#" class="add-to-cart text-center py-2 mr-1"><span>Add to cart</span></a>
                <a href="#" class="buy-now text-center py-2">Buy now</a>
            </p>
        </div>
    </div>
</div>

